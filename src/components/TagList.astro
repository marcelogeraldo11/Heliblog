---
export interface Props {
  tags: string[];
  class?: string; // Add optional class prop
}

const { tags = [], class: className = '' } = Astro.props;
---

{tags.length > 0 && (
  <div class={`flex flex-wrap gap-2 mt-3 ${className} overflow-hidden`}>
    {tags.map(tag => (
      <a 
        href={`/tags/${tag}`}
        class="inline-flex items-center rounded-lg bg-zinc-100 px-3.5 py-2 text-sm font-medium text-zinc-800 hover:bg-zinc-200 dark:bg-zinc-800 dark:text-zinc-100 dark:hover:bg-zinc-700 transition-all duration-300 min-h-[32px] shadow-sm hover:shadow-md hover:scale-105 active:scale-95 whitespace-nowrap"
      >
        <span class="mr-1 text-zinc-500 dark:text-zinc-400">#</span>{tag}
      </a>
    ))}
  </div>
)}