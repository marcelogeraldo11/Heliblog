---
const currentYear = new Date().getFullYear();

// Define navigation links
const navLinks = [
  { text: 'Sobre Heliboss', href: '/about' },
  { text: 'Blog', href: '/blog' },
  { text: 'Temas', href: '/tags' },
  { text: 'Redes Sociales', href: '/social' },
  { text: 'RSS', href: '/rss' },
];

// Define social links
const socialLinks = [
  { 
    name: 'LinkedIn', 
    href: 'https://cl.linkedin.com/company/dji-enterprise-heliboss-chile', 
